<%- include('../partials/base') %>

<body>
    <div class="container p-2">
      <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
        <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
          <span class="fs-3"><%= serviceName %></span>
        </a>
        <ul class="nav nav-pills">
            <li class="nav-item fs-6"><a href="/sites/create") }}" class="nav-link active">Create static site</a></li>
        </ul>
      </header>
    </div>
    <section class="container-md px-4">
        <div>
        <header class="row gy-4">
            <span class="fs-4">Site Directory</span>
            <%if ( expressFlash.length >0 ) { %>
            <div class="alert alert-danger" role="alert"><%= expressFlash %></div>
            <% } %>
        </header>
        </div>

        <div>  
        <table class="table">
            <tbody>
            <% if (!sites) { %>
            <div class="container gy-5">
                <div class="row py-4">
                <div class="alert alert-secondary" role="alert">
                    <p>No websites are currently deployed. Create one to get started!</p>
                    <a href="sites/create") }}" class="btn btn-primary">Create static site</a>
                </div>
                </div>
            </div>
            <% } else { %>
            <% sites.forEach(function(site) { %>
                <tr>
                <td class="align-bottom" colspan="4">
                    <div class="p-1">
                    <a href="<%= site.url %>" class="fs-5 align-bottom" target="_blank"><%= site.name %></a>
                    </div>
                </td>
                <td>
                    <div class="float-end p-1">
                        <form action="/sites/delete" method="post">
                        <input type="hidden" name="name" value="<%= site.name %>">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                    </div>
                    <div class="float-end p-1">
                        <form action="<%- '/sites/update?id='+site.name -%>" method="get">
                        <input class="btn btn-sm btn-primary" type="submit" value="Edit">
                    </form>
                    </div>
                    <div class="float-end p-1">
                        <a href="<%= site.console_url %>" class="btn btn-sm btn-outline-primary" target="_blank">View in console</a>
                    </div>
                </td>
                </tr>
            <% });  } %>
            </tbody>
        </table>
        </div>

</section>
</body>
